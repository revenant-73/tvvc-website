rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admin access to tryoutRegistrations collection
    match /tryoutRegistrations/{document=**} {
      allow read: if request.auth != null; // Only authenticated users can read
      allow create: if true; // Allow form submissions from anyone
      allow update, delete: if request.auth != null; // Only authenticated users can update/delete
    }
    
    // Add other collection rules as needed
    match /{document=**} {
      allow read, write: if false; // Default deny
    }
  }
}